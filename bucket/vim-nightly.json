        "github": "https://github.com/vim/vim-win32-installer",
        "re": "/tag/v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/vim/vim-win32-installer/releases/download/v$version/gvim_$version_x64.zip",
                "extract_dir": "vim/vim$majorVersion$minorVersion"
            },
            "32bit": {
